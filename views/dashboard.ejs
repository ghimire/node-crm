	</div>

	<hr>


	<!-- ---- Event Modal ----------- -->
	<div id="eventModal" class="modal hide fade">
	    <div class="modal-header">
	    	<button data-bind="click: cancelEvent" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    	<h5 class="muted">New Event</h5>
	    </div>
	    <div class="modal-body" data-bind="with: selectedEvent">
	    	<input type="text" placeholder="Event Title" autofocus required data-bind="value: $data.title"/><br/>
	    	<textarea placeholder="Event Description" data-bind="value: $data.description"></textarea>
	    </div>
	    <div class="modal-footer">
	    	<a href="#" class="btn" data-bind="click: cancelEvent">Close</a>
	    	<a href="#" class="btn btn-primary" data-bind="click: createEvent">Save</a>
	    </div>
    </div>
	<!-- ----End of Event Modal----------- -->

