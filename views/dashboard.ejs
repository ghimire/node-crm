<div id="dashboard-page" class="container">

	<div class="row">
		<div class="span12">
			<h2 style="color: #0099CC">
				<i class="icon-tasks"></i> Tasks</h2>

			<a href='#' class="btn btn-small btn-primary pull-left" data-bind="click: create" title="New Task"> <i class="icon-plus icon-large"></i> </a>
			
			<hr class="btn-info" />
			
			<!--  Tab Content Start -->
			<div style="width: 100%">
				<div class="input-prepend" id="filterbar">
					<span class="add-on"><i class="icon-search"></i></span>
					<input type="text" placeholder="Filter" id="task-filter" style="width: 25%"/>
				</div>
				
				<img src='/img/loader.gif' data-bind="visible: loadingTasks" style="display: none" />
				<div id="tasks"></div>
			</div><!-- End of Tab Content -->	
					
			<div class="clearfix"></div>
		</div>		
	
		
		<div class="span12">
			<h2 id="tabs" name="calendar">Calendar</h2>
			<hr class="btn-success" />
