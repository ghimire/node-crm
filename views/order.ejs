<div id="order-page" class="container">
		<div class="span12">
				<h2 class="pull-left" style="color: #0099CC">
					<i class="icon-tasks"></i> Orders
				</h2>
				<div class="clearfix"></div>
				
				<hr class="btn-info" />
		</div>
		<div class="span12">
			<div id="alertbox"></div>
			<!--  Tab Content Start -->
			<div style="width: 100%">
				<div class="input-prepend" id="filterbar">
					<span class="add-on"><i class="icon-filter"></i></span>
					<input type="text" placeholder="Filter" id="order-filter" style="width: 25%"/>
				</div>
				
				<img src='/img/loader.gif' data-bind="visible: loadingOrders" style="display: none"/>
				<div id="orders"></div>
			</div><!-- End of Tab Content -->
			
			
			<hr class="btn-danger" />
			
			<!--  Order History -->
			<div class="span10 row" id="orderHistoryContainer" data-bind="visible: !updatingOrderHistory, with: selectedOrder" style="display: none">
				<div>
					<div class="pull-left" style="margin-right: 10px;">
						<span class="label btn-info" style="font-size: 18px; font-weight: bold; padding-top: 6px; padding-bottom: 8px; margin-top: 1px" data-bind="text: $data.Order_Name"></span>
					</div>
					
					<div class="input-prepend pull-left" id="orderHistoryFilterbar" style="display: block">
						<span class="add-on btn-info"><i class="icon-filter"></i></span>
						<input type="text" placeholder="Filter History" id="order-history-filter"/>
					</div>
					
					<div class="pull-right">
						<a href="#" class='btn btn-info btn-small pull-right' data-bind="click: $parent.addOrderHistory"><i class="icon-plus icon-large"></i></a>
					</div>
					
					<div class="clearfix"></div>
				</div>
				
				<div style="padding-top: 5px" id="orderHistory"></div>
			</div>
			
			<!-- ---- Add Order History ----------- -->
			<div id="orderHistoryForm" data-bind="visible: updatingOrderHistory, with: selectedOrderHistory" style="display: none">
			  <form class="form-horizontal">
			    <fieldset>
					<div id="legend" class="">
					  <legend><small><span data-bind="text: $data.Order_Name"></span></small></legend>
					</div>
					<div id="comment" class="control-group">				
				          <label class="control-label" for="input01">Comment</label>
				          <div class="controls">
				            <input type="text" required autofocus data-bind="value: Comment" placeholder="Order History Comment" class="input-xlarge"/>
				          </div>
				    </div>
				    
					<div id="saveOrder" class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<button class="btn btn-primary" data-bind="click: $parent.createOrderHistory">Save</button>
							<button class="btn btn-danger" data-bind="click: $parent.cancelOrderHistory">Cancel</button>
						</div>
					</div>	
			    </fieldset>
			  </form>
		    </div>
			
		</div>
</div>

<script src="/js/vendor/editablegrid-2.0.1.js"></script>
